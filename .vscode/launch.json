{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach to Chrome",
        "port": 9222,
        "request": "attach",
        "type": "chrome",
        "webRoot": "${workspaceFolder}"
      },
      
      {
        "type": "chrome",
        "request": "launch",
        "name": "Debug on chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true,
        "trace": true,
        "skipFiles": ["<node_internals>/**"]
        // "sourceMapPathOverrides": {
        //   "webpack:///*": "${webRoot}/*"
        // }
      },
    ]
  }